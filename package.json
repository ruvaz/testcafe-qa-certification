{
  "name": "testcafe_workshop",
  "version": "1.0.0",
  "description": "QA-Certification",
  "main": "index.js",
  "scripts": {
    "test": "testcafe edge ./tests",
    "test-all-browsers": "testcafe all ./tests",
    "test-all-chrome": "testcafe chrome ./tests",
    "test-all-firefox": "testcafe firefox ./tests",
    "test-pc-browsers": "testcafe chrome,firefox,edge ./tests",
    "test-mobile-qr": "testcafe remote ./tests --qr-code",
    "test-mobile-emulated": "testcafe 'chrome:emulation:device=iphone X' ./tests",
    "test-all-report": "testcafe chrome ./tests --reporter html:reports/report.html"
  },
  "author": "Ruben Vazquez",
  "license": "ISC",
  "directories": {
    "test": "tests"
  },
  "dependencies": {
    "testcafe": "^1.12.0",
    "testcafe-reporter-html": "^1.4.6"
  }
}
